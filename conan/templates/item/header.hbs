{{!-- Item Header --}}
<header class="item-header">
  <img 
    class="profile-img" 
    src="{{item.img}}" 
    data-edit="img"
    title="{{item.name}}"
    alt="{{item.name}}"
  />
  
  <div class="header-details">
    <h1 class="item-name">
      <input 
        type="text" 
        name="name" 
        value="{{item.name}}" 
        placeholder="Item Name"
      />
    </h1>
    <div class="item-type-label">{{item.type}}</div>
  </div>
</header>
