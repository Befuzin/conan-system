{{!-- Item Details Tab --}}
<div class="tab-content details-tab" data-tab="details">

  {{!-- Weapon Details --}}
  {{#if (eq item.type "weapon")}}
  <div class="form-group">
    <label>Weapon Type</label>
    <select name="system.weaponType">
      {{#select system.weaponType}}
      {{#each config.weaponTypes as |label value|}}
      <option value="{{value}}">{{label}}</option>
      {{/each}}
      {{/select}}
    </select>
  </div>

  <div class="form-group">
    <label>Range</label>
    <select name="system.range">
      {{#select system.range}}
      {{#each config.ranges as |label value|}}
      <option value="{{value}}">{{label}}</option>
      {{/each}}
      {{/select}}
    </select>
  </div>

  <div class="form-group">
    <label>Damage Die</label>
    <select name="system.damage.die">
      {{#select system.damage.die}}
      {{#each config.damageDice as |label value|}}
      <option value="{{value}}">{{label}}</option>
      {{/each}}
      {{/select}}
    </select>
  </div>

  <div class="form-group">
    <label>Damage Bonus</label>
    <input 
      type="number" 
      name="system.damage.bonus" 
      value="{{system.damage.bonus}}" 
      data-dtype="Number"
    />
  </div>

  <div class="form-group">
    <label>Static Damage</label>
    <input 
      type="number" 
      name="system.damage.static" 
      value="{{system.damage.static}}" 
      data-dtype="Number"
    />
  </div>

  <div class="form-group checkbox">
    <label>
      <input 
        type="checkbox" 
        name="system.equipped" 
        {{checked system.equipped}}
      />
      Equipped
    </label>
  </div>
  {{/if}}

  {{!-- Armor Details --}}
  {{#if (eq item.type "armor")}}
  <div class="form-group">
    <label>Armor Type</label>
    <select name="system.armorType">
      {{#select system.armorType}}
      {{#each config.armorTypes as |label value|}}
      <option value="{{value}}">{{label}}</option>
      {{/each}}
      {{/select}}
    </select>
  </div>

  <div class="form-group">
    <label>Armor Rating (AR)</label>
    <input 
      type="number" 
      name="system.ar" 
      value="{{system.ar}}" 
      data-dtype="Number"
    />
  </div>

  <div class="form-group">
    <label>Defense Bonus</label>
    <input 
      type="number" 
      name="system.defenseBonus" 
      value="{{system.defenseBonus}}" 
      data-dtype="Number"
    />
  </div>

  <div class="form-group">
    <label>Stipulations</label>
    <textarea 
      name="system.stipulations" 
      rows="3"
    >{{system.stipulations}}</textarea>
  </div>

  <div class="form-group checkbox">
    <label>
      <input 
        type="checkbox" 
        name="system.equipped" 
        {{checked system.equipped}}
      />
      Equipped
    </label>
  </div>
  {{/if}}

  {{!-- Skill Details --}}
  {{#if (eq item.type "skill")}}
  <div class="form-group">
    <label>Effect</label>
    <textarea 
      name="system.effect" 
      rows="5"
    >{{system.effect}}</textarea>
  </div>

  <div class="form-group">
    <label>Stamina Cost</label>
    <input 
      type="number" 
      name="system.staminaCost" 
      value="{{system.staminaCost}}" 
      data-dtype="Number"
      min="0"
    />
  </div>
  {{/if}}

  {{!-- Spell Details --}}
  {{#if (eq item.type "spell")}}
  <div class="form-group">
    <label>Discipline</label>
    <select name="system.discipline">
      {{#select system.discipline}}
      {{#each config.disciplines as |label value|}}
      <option value="{{value}}">{{label}}</option>
      {{/each}}
      {{/select}}
    </select>
  </div>

  <div class="form-group">
    <label>Life Point Cost</label>
    <input 
      type="number" 
      name="system.cost.life" 
      value="{{system.cost.life}}" 
      data-dtype="Number"
      min="0"
    />
  </div>

  <div class="form-group">
    <label>Stamina Point Cost</label>
    <input 
      type="number" 
      name="system.cost.stamina" 
      value="{{system.cost.stamina}}" 
      data-dtype="Number"
      min="0"
    />
  </div>

  <div class="form-group">
    <label>Actions Required</label>
    <input 
      type="number" 
      name="system.actions" 
      value="{{system.actions}}" 
      data-dtype="Number"
      min="1"
      max="2"
    />
  </div>

  <div class="form-group">
    <label>Range</label>
    <select name="system.range">
      {{#select system.range}}
      {{#each config.ranges as |label value|}}
      <option value="{{value}}">{{label}}</option>
      {{/each}}
      {{/select}}
    </select>
  </div>

  <div class="form-group">
    <label>Effect</label>
    <textarea 
      name="system.effect" 
      rows="5"
    >{{system.effect}}</textarea>
  </div>
  {{/if}}

  {{!-- Gear Details --}}
  {{#if (eq item.type "gear")}}
  <div class="form-group">
    <label>Quantity</label>
    <input 
      type="number" 
      name="system.quantity" 
      value="{{system.quantity}}" 
      data-dtype="Number"
      min="0"
    />
  </div>
  {{/if}}

</div>
