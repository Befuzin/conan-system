<form class="{{cssClass}} flexcol" autocomplete="off">
  {{!-- Sheet Header --}}
  <header class="sheet-header">
    <div class="header-row-1">
      <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100"/>
      <div class="header-main">
        <h1 class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder="Name"/></h1>
        <div class="origin-flex-row">
          <div class="origin-field">
            <label>Origin</label>
            <input type="text" name="system.origin" value="{{system.origin}}" placeholder="Origin"/>
          </div>
          <div class="flex-die-field">
            <label>Flex Die</label>
            <select name="system.flexDie" data-dtype="String">
              {{#select system.flexDie}}
              <option value="d10">D10</option>
              <option value="d8">D8</option>
              <option value="d6">D6</option>
              {{/select}}
            </select>
          </div>
        </div>
      </div>
    </div>

    {{!-- Attributes Row - Always Visible --}}
    <div class="attributes-row">
      {{#each system.attributes as |attribute key|}}
      <div class="attribute-box">
        <div class="attribute-header">{{lookup ../config.stats key}}</div>
        <div class="attribute-values">
          <div class="attribute-value">
            <label>Value</label>
            <input type="text" name="system.attributes.{{key}}.value" value="{{attribute.value}}" data-dtype="Number"/>
          </div>
          <div class="attribute-die">
            <label>Die</label>
            <select name="system.attributes.{{key}}.die" data-dtype="String">
              {{#select attribute.die}}
              <option value="d6">D6</option>
              <option value="d8">D8</option>
              <option value="d10">D10</option>
              {{/select}}
            </select>
          </div>
        </div>
        <button class="rollable stat attribute-roll" data-stat="{{key}}" type="button">
          <i class="fas fa-dice-d20"></i> Roll
        </button>
      </div>
      {{/each}}
    </div>

    {{!-- Resources Row --}}
    <div class="resources-row">
      <div class="resource-box life-points">
        <label>Life Points</label>
        <div class="resource-content">
          <input type="text" name="system.health.value" value="{{system.health.value}}" data-dtype="Number" class="current"/>
          <span class="sep">/</span>
          <span class="max">{{system.health.max}}</span>
        </div>
        <div class="base-lp-hint">Base: <input type="text" name="system.baseLifePoints" value="{{system.baseLifePoints}}" data-dtype="Number" class="base-input"/></div>
      </div>
      
      <div class="resource-box stamina">
        <label>Stamina Points</label>
        <div class="resource-content">
          <input type="text" name="system.stamina.value" value="{{system.stamina.value}}" data-dtype="Number" class="current"/>
          <span class="sep">/</span>
          <span class="max">{{system.stamina.max}}</span>
        </div>
      </div>

      <div class="resource-box recoveries">
        <label>Recoveries</label>
        <div class="resource-content">
          <input type="text" name="system.recoveries.value" value="{{system.recoveries.value}}" data-dtype="Number" class="current"/>
          <span class="sep">/</span>
          <input type="text" name="system.recoveries.max" value="{{system.recoveries.max}}" data-dtype="Number" class="max"/>
        </div>
      </div>

      <div class="defense-box">
        <label>Physical Defense</label>
        <div class="defense-value">{{system.defenses.physical.value}}</div>
      </div>

      <div class="defense-box">
        <label>Sorcery Defense</label>
        <div class="defense-value">{{system.defenses.sorcery.value}}</div>
      </div>

      <div class="defense-box">
        <label>Armor Rating</label>
        <div class="defense-value">{{system.armor.rating}}</div>
      </div>

      <div class="recovery-button-box">
        <button class="use-recovery" type="button">
          <i class="fas fa-heart"></i> Use Recovery
        </button>
      </div>
    </div>
  </header>

  {{!-- Sheet Tab Navigation - Compact --}}
  <nav class="sheet-tabs tabs compact-tabs" data-group="primary">
    <a class="item" data-tab="combat">Combat</a>
    <a class="item" data-tab="spells">Spells</a>
    <a class="item" data-tab="skills">Skills</a>
    <a class="item" data-tab="gear">Gear</a>
    <a class="item" data-tab="notes">Notes</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">
    {{!-- Combat Tab --}}
    <div class="tab combat" data-group="primary" data-tab="combat">
      <div class="combat-grid">
        <div class="combat-column weapons-column">
          <h3 class="section-header">
            <i class="fas fa-sword"></i> Weapons
            <a class="item-create" data-type="weapon"><i class="fas fa-plus"></i></a>
          </h3>
          <ol class="items-list compact">
            {{#each weapons as |item id|}}
            <li class="item flexrow" data-item-id="{{item._id}}">
              <div class="item-image"><img src="{{item.img}}" title="{{item.name}}" width="20" height="20"/></div>
              <h4 class="item-name">{{item.name}}</h4>
              <div class="item-controls">
                <span class="item-detail small">{{item.system.damage}}</span>
                <a class="weapon-attack" title="Attack"><i class="fas fa-crosshairs"></i></a>
                <a class="weapon-damage" title="Damage"><i class="fas fa-burst"></i></a>
                <a class="item-edit" title="Edit"><i class="fas fa-edit"></i></a>
                <a class="item-delete" title="Delete"><i class="fas fa-trash"></i></a>
              </div>
            </li>
            {{/each}}
          </ol>
        </div>

        <div class="combat-column armor-column">
          <h3 class="section-header">
            <i class="fas fa-shield"></i> Armor
            <a class="item-create" data-type="armor"><i class="fas fa-plus"></i></a>
          </h3>
          <ol class="items-list compact">
            {{#each armor as |item id|}}
            <li class="item flexrow" data-item-id="{{item._id}}">
              <div class="item-image"><img src="{{item.img}}" title="{{item.name}}" width="20" height="20"/></div>
              <h4 class="item-name">{{item.name}}</h4>
              <div class="item-controls">
                <span class="item-detail small">AR {{item.system.armorRating}}</span>
                <a class="item-toggle" title="{{#if item.system.equipped}}Unequip{{else}}Equip{{/if}}">
                  <i class="fas {{#if item.system.equipped}}fa-shield-alt{{else}}fa-shield{{/if}}"></i>
                </a>
                <a class="item-edit" title="Edit"><i class="fas fa-edit"></i></a>
                <a class="item-delete" title="Delete"><i class="fas fa-trash"></i></a>
              </div>
            </li>
            {{/each}}
          </ol>
        </div>
      </div>
    </div>

    {{!-- Spells Tab --}}
    <div class="tab spells" data-group="primary" data-tab="spells">
      <h3 class="section-header">
        <i class="fas fa-magic"></i> Sorcery
        <a class="item-create" data-type="spell"><i class="fas fa-plus"></i></a>
      </h3>
      <ol class="items-list">
        {{#each spells as |item id|}}
        <li class="item flexrow" data-item-id="{{item._id}}">
          <div class="item-image"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></div>
          <h4 class="item-name">{{item.name}}</h4>
          <div class="item-controls">
            <span class="item-detail">Cost: {{item.system.cost}}</span>
            <span class="item-detail">{{lookup ../config.ranges item.system.range}}</span>
            <a class="item-edit" title="Edit"><i class="fas fa-edit"></i></a>
            <a class="item-delete" title="Delete"><i class="fas fa-trash"></i></a>
          </div>
        </li>
        {{/each}}
      </ol>
    </div>

    {{!-- Skills Tab --}}
    <div class="tab skills" data-group="primary" data-tab="skills">
      <div class="skills-grid">
        <div class="skills-column">
          <h3 class="section-header">
            <i class="fas fa-star"></i> Skills
            <a class="item-create" data-type="skill"><i class="fas fa-plus"></i></a>
          </h3>
          <ol class="items-list compact">
            {{#each skills as |item id|}}
            <li class="item flexrow" data-item-id="{{item._id}}">
              <h4 class="item-name">{{item.name}}</h4>
              <div class="item-controls">
                <span class="item-detail small">{{lookup ../config.statsAbbreviations item.system.attribute}}</span>
                <span class="item-detail small">{{#if item.system.bonus}}+{{item.system.bonus}}{{/if}}</span>
                <a class="item-edit" title="Edit"><i class="fas fa-edit"></i></a>
                <a class="item-delete" title="Delete"><i class="fas fa-trash"></i></a>
              </div>
            </li>
            {{/each}}
          </ol>
        </div>

        <div class="talents-column">
          <h3 class="section-header">
            <i class="fas fa-fist-raised"></i> Talents
            <a class="item-create" data-type="talent"><i class="fas fa-plus"></i></a>
          </h3>
          <ol class="items-list compact">
            {{#each talents as |item id|}}
            <li class="item flexrow" data-item-id="{{item._id}}">
              <h4 class="item-name">{{item.name}}</h4>
              <div class="item-controls">
                {{#if item.system.uses.max}}
                <span class="item-detail small">{{item.system.uses.value}}/{{item.system.uses.max}}</span>
                {{/if}}
                <a class="item-edit" title="Edit"><i class="fas fa-edit"></i></a>
                <a class="item-delete" title="Delete"><i class="fas fa-trash"></i></a>
              </div>
            </li>
            {{/each}}
          </ol>
        </div>
      </div>
    </div>

    {{!-- Gear Tab --}}
    <div class="tab gear" data-group="primary" data-tab="gear">
      <div class="encumbrance-tracker {{#if system.encumbrance.encumbered}}encumbered{{/if}}">
        <div class="encumbrance-row">
          <div class="encumbrance-item">
            <label>Equipment Slots</label>
            <span class="encumbrance-value">{{system.encumbrance.slots.used}} / {{system.encumbrance.slots.max}}</span>
          </div>
          <div class="encumbrance-item">
            <label>Bundle Items</label>
            <span class="encumbrance-value">{{system.encumbrance.bundleItems}} / {{system.encumbrance.bundleMax}}</span>
          </div>
          <div class="encumbrance-item">
            <label>Status</label>
            <span class="encumbrance-status">
              {{#if system.encumbrance.encumbered}}
                <i class="fas fa-exclamation-triangle"></i> ENCUMBERED
              {{else}}
                <i class="fas fa-check"></i> OK
              {{/if}}
            </span>
          </div>
        </div>
        {{#if system.encumbrance.encumbered}}
        <div class="encumbrance-warning">
          <i class="fas fa-exclamation-circle"></i> 
          <strong>Encumbered:</strong> Limited to 1 Move Action per turn. 
          If wearing Heavy Armor, must spend 1 Stamina to Move.
        </div>
        {{/if}}
      </div>

      <h3 class="section-header">
        <i class="fas fa-backpack"></i> Equipment & Gear
        <a class="item-create" data-type="gear"><i class="fas fa-plus"></i></a>
      </h3>
      <ol class="items-list">
        {{#each gear as |item id|}}
        <li class="item flexrow" data-item-id="{{item._id}}">
          <div class="item-image"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></div>
          <h4 class="item-name">{{item.name}}</h4>
          <div class="item-controls">
            <span class="item-detail">Qty: {{item.system.quantity}}</span>
            {{#if item.system.isBundle}}
            <span class="item-detail small">Bundle</span>
            {{/if}}
            <a class="item-edit" title="Edit"><i class="fas fa-edit"></i></a>
            <a class="item-delete" title="Delete"><i class="fas fa-trash"></i></a>
          </div>
        </li>
        {{/each}}
      </ol>
    </div>

    {{!-- Notes Tab --}}
    <div class="tab notes" data-group="primary" data-tab="notes">
      {{editor system.biography target="system.biography" button=true owner=owner editable=editable}}
    </div>
  </section>
</form>
