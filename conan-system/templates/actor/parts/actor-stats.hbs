{{!-- Stats Partial --}}
<div class="stats-section">
  {{#each stats as |stat key|}}
  <div class="stat-row">
    <label>{{lookup @root.config.stats key}}</label>
    <input type="text" name="system.{{key}}.value" value="{{stat.value}}" data-dtype="Number"/>
    <select name="system.{{key}}.die">
      {{#select stat.die}}
      <option value="d6">D6</option>
      <option value="d8">D8</option>
      <option value="d10">D10</option>
      {{/select}}
    </select>
  </div>
  {{/each}}
</div>
