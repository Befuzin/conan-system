<div class="tab gear" data-group="primary" data-tab="gear">
  
  {{!-- Encumbrance Tracker (Character only) --}}
  {{#if encumbrance}}
  <div class="encumbrance-tracker {{#if encumbrance.encumbered}}encumbered{{/if}}">
    <div class="encumbrance-row">
      <div class="encumbrance-item">
        <label>{{localize "CONAN.EquipmentSlots"}}</label>
        <span class="encumbrance-value">
          {{encumbrance.slots.used}} / {{encumbrance.slots.max}}
        </span>
      </div>
      
      <div class="encumbrance-item">
        <label>{{localize "CONAN.BundleItems"}}</label>
        <span class="encumbrance-value">
          {{encumbrance.bundleItems}} / {{encumbrance.bundleMax}}
        </span>
      </div>
      
      <div class="encumbrance-item">
        <label>{{localize "CONAN.Status"}}</label>
        <span class="encumbrance-status">
          {{#if encumbrance.encumbered}}
            <i class="fas fa-exclamation-triangle"></i> 
            {{localize "CONAN.Encumbered"}}
          {{else}}
            <i class="fas fa-check"></i> 
            {{localize "CONAN.OK"}}
          {{/if}}
        </span>
      </div>
    </div>
    
    {{#if encumbrance.encumbered}}
    <div class="encumbrance-warning">
      <i class="fas fa-exclamation-circle"></i> 
      <strong>{{localize "CONAN.EncumberedEffect"}}</strong>
      {{localize "CONAN.EncumberedDesc"}}
    </div>
    {{/if}}
  </div>
  {{/if}}

  {{!-- Gear List --}}
  <h3 class="section-header">
    <i class="fas fa-backpack"></i> {{localize "CONAN.EquipmentGear"}}
    <button 
      type="button"
      data-action="createItem" 
      data-type="gear"
      title="{{localize 'CONAN.CreateGear'}}"
    >
      <i class="fas fa-plus"></i>
    </button>
  </h3>
  
  {{#if gear.length}}
  <ol class="items-list gear-list">
    {{#each gear as |item|}}
    <li class="item flexrow" data-item-id="{{item.id}}">
      <div class="item-image">
        <img src="{{item.img}}" alt="{{item.name}}" width="24" height="24"/>
      </div>
      
      <h4 class="item-name">{{item.name}}</h4>
      
      <div class="item-details">
        <span class="item-detail quantity">
          <strong>{{localize "CONAN.Qty"}}:</strong> {{item.quantity}}
        </span>
        
        {{#if item.isBundle}}
        <span class="item-detail small bundle-badge">
          <i class="fas fa-box"></i> {{localize "CONAN.Bundle"}}
        </span>
        {{/if}}
      </div>
      
      <div class="item-controls">
        <button 
          type="button"
          data-action="editItem" 
          title="{{localize 'CONAN.Edit'}}"
        >
          <i class="fas fa-edit"></i>
        </button>
        
        <button 
          type="button"
          data-action="deleteItem" 
          title="{{localize 'CONAN.Delete'}}"
        >
          <i class="fas fa-trash"></i>
        </button>
      </div>
    </li>
    {{/each}}
  </ol>
  {{else}}
  <div class="empty-section">
    <p>{{localize "CONAN.NoGear"}}</p>
    <p class="hint">{{localize "CONAN.NoGearHint"}}</p>
  </div>
  {{/if}}
  
  {{!-- Equipment Guidelines --}}
  <div class="gear-info">
    <h4>{{localize "CONAN.EquipmentGuidelines"}}</h4>
    <ul class="gear-reminders">
      <li>
        <i class="fas fa-info-circle"></i> 
        {{localize "CONAN.EquipmentReminder1"}}
      </li>
      <li>
        <i class="fas fa-info-circle"></i> 
        {{localize "CONAN.EquipmentReminder2"}}
      </li>
      <li>
        <i class="fas fa-info-circle"></i> 
        {{localize "CONAN.EquipmentReminder3"}}
      </li>
    </ul>
  </div>
</div>